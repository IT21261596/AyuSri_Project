<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adddisease"
    android:background="@drawable/bwback">

    <Button
        android:id="@+id/diseaseaddbutton"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/roundstyle2"
        android:backgroundTint="@color/button2"
        android:text="ADD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disesaseabout"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="488dp"
        android:layout_height="150dp"
        android:layout_marginBottom="581dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/navnew"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="44dp"
            android:fontFamily="cursive"
            android:text="AyuSri"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logonew" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/topicdisease"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/roundstyle"
        android:paddingHorizontal="20dp"
        android:backgroundTint="@color/welcomenew"
        android:backgroundTintMode="src_in"
        android:hint="   ENTER DISEASE"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <EditText
        android:id="@+id/disesaseabout"
        android:layout_width="320dp"
        android:layout_height="289dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/welcomenew"
        android:paddingHorizontal="20dp"
        android:backgroundTintMode="src_in"
        android:hint="   ENTER DESCRIPTION"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>